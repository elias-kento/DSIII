<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.RelatorioCategorias"
             Title="RelatÃ³rio por Categoria">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Atualizar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Totais por categoria" FontAttributes="Bold" FontSize="16" />

        <CollectionView x:Name="cv_totais">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Padding="6">
                        <Label Text="{Binding Categoria}" />
                        <Label Grid.Column="1"
                               Text="{Binding Total, StringFormat='{}{0:C}'}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="lbl_total_geral"
               FontAttributes="Bold"
               HorizontalOptions="End" />
    </VerticalStackLayout>
</ContentPage>
